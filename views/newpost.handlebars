<div class="flex justify-center">
    <form class="flex flex-col pt-5 pb-4 w-2/3" id="new-post">
        <div class="rounded border border-stone-900">
            <div class="px-1 py-2 bg-stone-900 text-teal-300 text-xl font-bold">
                Create New Post
            </div>
            <div class="mb-4 mx-1">
                <label class="block font-bold mb-2" for="post-title">
                    Title
                </label>
                <input class="border-2 rounded w-full focus:shadow-outline" id="post-title" type="text" placeholder="New Post Title">
            </div>
            <div class="mb-4 mx-1">
                <label class="block font-bold mb-2" for="post-content">
                    Content
                </label>
                <textarea class="border-2 rounded w-full focus:shadow-outline" id="post-content" name="post-content" rows="4"></textarea>
            </div>
            <div class="text-center mb-1">
                <button class="bg-stone-900 rounded py-2 w-80 text-lg text-white hover:bg-stone-700" type="submit">Create</button>
            </div>
        </div>
    </form>
</div>

