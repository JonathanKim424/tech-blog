<div class="flex justify-center">
    <form class="flex flex-col pt-5 pb-4 w-2/3" id="edit-post">
        <div class="rounded border border-stone-900">
            <div class="px-1 py-2 bg-stone-900 text-teal-300 text-xl font-bold">
                Update Post
            </div>
            <div class="mb-4 mx-1">
                <label class="block font-bold mb-2" for="post-title">
                    Title
                </label>
                <input class="border-2 rounded w-full focus:shadow-outline" id="post-title" type="text" value="{{post.title}}">
            </div>
            <div class="mb-4 mx-1">
                <label class="block font-bold mb-2" for="post-content">
                    Content
                </label>
                <textarea class="border-2 rounded w-full focus:shadow-outline" id="post-content" name="post-content" rows="4">{{post.content}}</textarea>
            </div>
            <div class="post-btn">
                <div class="text-center mb-1">
                    <button class="bg-stone-900 rounded py-2 w-80 text-lg text-white hover:bg-stone-700" id="update">Update</button>
                </div>
                <div class="text-center mb-2">
                    <button class="bg-stone-900 rounded py-2 w-80 text-lg text-white hover:bg-stone-700" id="openModal">Delete</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="fixed hidden inset-0 bg-gray-600 bg-opacity-50 w-full h-full overflow-y-auto" id="deleteModal" tabindex="-1">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <div>
                Are you sure you want to delete this post?
            </div>
            <div class="mt-3">
                <button id="close" class="bg-stone-900 py-1 w-40 rounded text-lg text-white hover:bg-stone-700">Close</button>
                <button id="delete" class="bg-red-900 py-1 w-40 rounded text-lg text-white hover:bg-stone-700">Delete</button>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/editpost.js"></script>